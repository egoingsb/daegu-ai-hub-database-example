CREATE TABLE "topic" (
	"id"	INTEGER NOT NULL,
	"title"	TEXT NOT NULL,
	"body"	TEXT,
	"author_name"	TEXT,
	"author_job"	TEXT,
	PRIMARY KEY("id" AUTOINCREMENT)
);

INSERT INTO 
    topic (title, body, author_name, author_job)
    VALUES(
        'mysql',
        'mysql is ...', 
        'egoing', 
        'programmer'
    );


